    link(rel='stylesheet', href='/stylesheets/dist/styles.css')
    script(src= 'https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.14/angular.min.js')
    script(src= 'https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.14/angular-route.min.js')
    script(src= 'scripts/mean-routes.js')
    script(src= 'scripts/mean-service.js')
    script(src= 'scripts/mean-main-ctrl.js')
    script(src= 'scripts/mean-contact-ctrl.js')
